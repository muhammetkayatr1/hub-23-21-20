@model Author

<div class="col-12 col-sm-6 col-md-4 col-lg-3">
    <div class="our-team">
        <div class="picture">
            <img class="img-fluid" src="/img/@Model.Image">
        </div>
        <div class="team-content">
            <a asp-controller="home" asp-action="AuthorDetails" asp-route-author="@Model.Url">
                <h3 style="color: #4e5052" class="name">@Model.NameSurname</h3>
            </a>
            <h4 class="title">@Model.Description</h4>
        </div>
        <ul class="social">
            <li><a href="@Model.Twitter" class="fa fa-twitter" aria-hidden="true"></a></li>
            <li><a href="@Model.Linkedin" class="fa fa-linkedin" aria-hidden="true"></a></li>
        </ul>
    </div>
</div>